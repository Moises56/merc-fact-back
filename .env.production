# Database connection
DATABASE_URL="sqlserver://server;database=dbname;user=Userdb;password=passdb;encrypt=true;trustServerCertificate=true"

# JWT Configuration
JWT_SECRET="your-secret-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-refresh-secret-change-this-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Frontend URL for CORS configuration
FRONTEND_URL="http://localhost:3001"
NODE_ENV="development"

# Port
PORT=3001

# ====================================
# CONFIGURACIÓN DE AMNISTÍA TRIBUTARIA
# ====================================
# Modificar estos valores cuando el Congreso apruebe una nueva amnistía
# AMNISTIA_ACTIVA: true/false - Si la amnistía está vigente
# AMNISTIA_FECHA_INICIO: Fecha de inicio (formato: YYYY-MM-DD)
# AMNISTIA_FECHA_FIN: Fecha de fin (formato: YYYY-MM-DD)
# AMNISTIA_ANIO_DESDE: Primer año que cubre la amnistía
# AMNISTIA_ANIO_HASTA: Último año que cubre la amnistía
# AMNISTIA_DESCRIPCION: Descripción informativa

AMNISTIA_ACTIVA=false
AMNISTIA_FECHA_INICIO=2025-01-01
AMNISTIA_FECHA_FIN=2025-09-30
AMNISTIA_ANIO_DESDE=2016
AMNISTIA_ANIO_HASTA=2025
AMNISTIA_DESCRIPCION="Amnistía Tributaria 2025 (Expirada)"
